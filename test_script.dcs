#!/usr/local/bin/DCS
@include base.dcs

pw:
	call print %ARGSV
	call wait 1

main:
	call print What is your name?
	pyval input()
	call pw Hello %return

	if true
		call pw Conditionals
		if true
			call pw Embedded Conditionals!

	call pw Take function arguments through %ARG_0 %ARG_1 etc.
	call pw Full args with %ARGSV
	
	%var = 0
	if %var < 5 
		call pw Loop %var
		%var = %var + 1
		go -3
