#!/usr/local/bin/DCS

print:
	pyval print("%ARGSV")

wait:
	pyval sleep(int("%ARG_0"))

main:
	call print Help and Stuff
	call wait 1

	if true
		call print Conditionals
		if true
			call print Embedded Conditionals!

	call print Take program/function arguments through %ARG_0 %ARG_1 etc.
	call wait 1
	
	%VARIABLES = 0
	if %VARIABLES < 5 
		call print Loop %VARIABLES
		call wait 1
		%VARIABLES = %VARIABLES + 1
		go -4
